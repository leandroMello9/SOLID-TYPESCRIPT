{
  "compilerOptions": {
                 
    "target": "es2017",                       
    "module": "commonjs",                     /* Specify module code generation: 'none', 'commonjs', 'amd', 'system', 'umd', 'es2015', 'es2020', or 'ESNext'. */
  
    "strict": false,  
    "allowJs": true,                         
   
    "esModuleInterop": true,                  
  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    
  },
  "include": [
    "src/**/*.ts"
  ]
}
